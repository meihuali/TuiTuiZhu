<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="55dp"
                                                   android:background="@color/white">

    <TextView
            android:id="@+id/item_address_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="18dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/item_address_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/item_address_iv"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/item_address_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="18dp"
            android:maxWidth="100dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/item_address_iv"
            app:layout_constraintTop_toBottomOf="@+id/item_address_address"/>

    <ImageView
            android:id="@+id/item_address_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:scaleType="center"
            android:src="@drawable/address_locate"
            app:layout_constraintBottom_toBottomOf="@+id/item_address_name"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/item_address_address"/>
</androidx.constraintlayout.widget.ConstraintLayout>